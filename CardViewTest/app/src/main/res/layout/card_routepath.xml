<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingStart="10dp"
        android:id="@+id/rl_item"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textRouteType"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_gravity="end"
            android:gravity="center_vertical|start"
            android:text="TextView"
            android:textAlignment="gravity"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imagePathColor"
            android:layout_width="17dp"
            android:layout_height="19dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/s_info_icon_01" />

        <LinearLayout
            android:id="@+id/layoutCharge"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@+id/textRouteType"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageCharge"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/s_info_icon_charge_nor" />

            <TextView
                android:id="@+id/textCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:text="TextView"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textDistance"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_below="@+id/layoutCharge"
            android:layout_marginTop="2dp"
            android:gravity="end|center_vertical"
            android:text="TextView"
            android:textAlignment="gravity"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/textDistance"
            android:gravity="end|center_vertical"
            android:text="TextView"
            android:textAlignment="gravity"
            android:textSize="21sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
